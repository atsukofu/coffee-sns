
<div class="container">
  <div class="post-product-name">商品名：<%= @post.product %></div>
  <div class="flex-wrapper">
    <div id="canvas-wrapper">
      <canvas class="myChart" width="400" height="300">
      </canvas>
    </div>
    <div class="info-wrapper">
      <div class="user-info">
        <%= link_to user_path(@post.user), class: "post-user-link" do %>
          <%= image_tag @post.user.image.thumb_user.url, class: "post-user-img" %>
          <span class="post-user-name">
            <%= @post.user.nickname %>
          </span>
        <% end %>
      </div>
      <ul class="post-info">
        <li>購入店舗：<%= @post.shop %></li>
        <li>豆の銘柄：<%= @post.brand %></li>
        <li>価格：<%= @post.price %>円</li>
        <li>
          単位：
          <% if @post.per == 1 %>
            一杯あたり
          <% elsif @post.per == 2 %>
            100gあたり
          <% elsif @post.per == 3 %>
            1袋あたり
          <% end %>
          </li>
        <li>全体評価：
          <span>
            <% @post.stars.times do%>
              <i class="fas fa-star"></i>
            <% end %>
          </span>
        </li>
      </ul>
      <div class="product-show__menu">
        <div id="like-<%= @post.id %>">
          <%= render 'likes/like', { post: @post} %>
        </div>
        <% if current_user && current_user.id == @post.user.id %>
          <%= link_to "編集", edit_post_path(@post) %>
          <%= link_to "削除", post_path(@post), method: :delete %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="comment">
    <% if current_user %>
      <%= form_for [@post, @comment] do |f| %>
        <%= f.text_area :content, placeholder: "コメントを書く", class: "comment__textbox" %>
        <%= f.submit "SEND", class: "comment__form-send" %>
      <% end %>
    <% end %>
    <div class="comment__show">
      <% if @comments %>
        <% @comments.each do |comment|%>
          <div class="comment__show--content">
            <%= link_to comment.user.nickname, user_path(comment.user) %>： 
            <%= comment.content %>
          </div>
        <% end %>
      <% end %>    
    </div>
  </div>

</div>
<% content_for :js do %>
  <%= javascript_include_tag 'chart.js','data-turbolinks-track': 'reload' %>
<% end %>