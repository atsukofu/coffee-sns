<div class="container">
  <div class="user-info">
    user-name
  </div>
  <ul>
    <li>商品名：<%= @post.product %></li>
    <li>購入店舗：<%= @post.shop %></li>
    <li>豆の銘柄：<%= @post.brand %></li>
    <li>価格：<%= @post.price %>円</li>
    <li>
      単位：
      <% if @post.per == 1 %>
        一杯あたり
      <% elsif @post.per == 2 %>
        100gあたり
      <% elsif @post.per == 3 %>
        1袋あたり
      <% end %>
      </li>
    <li>全体評価：<%= @post.stars %></li>
  </ul>
  <canvas id="myChart">
  </canvas>
  <div class="product-show__menu">
    <% if current_user.already_liked?(@post) %>
      <%= button_to "いいね済み", post_like_path(@post),method: :delete %>
    <% else %>
      <%= button_to "いいね", post_likes_path(@post) %>
    <% end %>
    <%= @likes.count %>
    <div>編集</div>
    <div>削除</div>
  </div>
  <div class="comment">
    <%= form_for [@post, @comment], html: { class: "comment__form" } do |f| %>
      <%= f.text_area :content, placeholder: "コメントを書く" %>
      <%= f.submit "SEND", class: "comment__form-send" %>
    <% end %>
    <div class="comment__show">
      <% if @comments %>
        <% @comments.each do |comment|%>
          <%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>： 
          <%= comment.content %>
        <% end %>
      <% end %>    
    </div>
  </div>

</div>