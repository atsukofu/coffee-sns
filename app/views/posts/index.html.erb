<div class="container">
  <div class="top-head">
    <% if !current_user %>
      <%= link_to "sign in / sign up", new_user_session_path %>
    <% end %>
  </div>
  <div class="top-index">
    <article class="top-index-post">
      <% @posts.each do |post| %>
        <%= post.user.nickname %>
        <%= post.product %>
        <%= post.stars %>
      <% end %>
    </article>
  </div>
</div>